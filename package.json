{
  "name": "personal-productivity-ai",
  "version": "0.1.0",
  "description": "Персональный ИИ-ассистент для продуктивности",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:allure": "playwright test --reporter=allure-playwright",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure": "npm run test:e2e:allure && npm run allure:generate && npm run allure:open",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "test:unit:ci": "jest tests/unit --coverage --ci",
    "test:integration:ci": "jest tests/integration --ci",
    "test:e2e:ci": "playwright test --reporter=line"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.6.0",
    "@playwright/mcp": "^0.0.37",
    "@supabase/supabase-js": "^2.57.4",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "firecrawl-mcp": "^3.1.13",
    "framer-motion": "^11.0.0",
    "github-mcp-server": "^1.8.7",
    "lucide-react": "^0.400.0",
    "next": "^14.2.0",
    "postcss": "^8.4.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.52.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.0",
    "time-mcp": "^1.0.4",
    "typescript": "^5.4.0",
    "zod": "^3.25.76",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "dotenv": "^17.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-fetch": "^2.7.0",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "vercel": "^48.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "productivity",
    "ai",
    "assistant",
    "automation",
    "planning",
    "pwa"
  ],
  "author": {
    "name": "Personal AI Team",
    "email": "hello@personal-ai.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
