                "@modelcontextprotocol/server-memory"
            ]
        },
        "postgres": {
            "command": "npx",
            "args": [
                "@modelcontextprotocol/server-postgres"
            ],
            "env": {
                "POSTGRES_CONNECTION_STRING": "postgresql://postgres:${DB_PASSWORD}@db.zpgkzvflmgxrlgkecscg.supabase.co:5432/postgres"
            }
        },
        "docker": {
            "command": "npx",
            "args": [
                "@modelcontextprotocol/server-docker"
            ]
        },
        "puppeteer": {
            "command": "npx",
            "args": [
                "@modelcontextprotocol/server-puppeteer"
            ]
        },
        "linear": {
            "command": "npx",
            "args": [
                "linear-mcp-server"
            ],
            "env": {
                "LINEAR_API_KEY": "${LINEAR_API_KEY}"
            }
        },
        "notion": {
            "command": "npx",
            "args": [
