        },
        "anthropic": {
            "command": "npx",
            "args": [
                "@modelcontextprotocol/server-anthropic"
            ],
            "env": {
                "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
            }
        },
        "time": {
            "command": "npx",
            "args": [
                "time-mcp"
            ]
        },
        "playwright": {
            "command": "npx",
            "args": [
                "@playwright/mcp"
